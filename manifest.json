{
  "manifest_version": 2,
  "name": "ClickSearch",
  "version": "0.0.1",
  "description": "Open a new tab with Cmd/Ctrl+Click",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "permissions": [
    "activeTab",
    "browsingData",
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
